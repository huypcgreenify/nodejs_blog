<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-courses-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>

                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h6 class="card-title" id="test2">{{this.name}}</h6>
                    </a>

                    <div id='wrapper'>
                        <p class="card-text" id="test">{{this.description}} </p>
                        <div id='read-more'></div>
                        {{!-- <div id='read-more' onclick="expand(this)"></div> --}}
                    </div>

                    <a href="#" class="btn btn-primary">Mua khóa học</a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

